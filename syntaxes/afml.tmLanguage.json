{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "fileTypes": ["afml"],
  "name": "AFML Configuration Language",
  "scopeName": "source.afml",
  "patterns": [
    {
      "include": "#section"
    },
    {
      "include": "#variable-declaration"
    },
    {
      "include": "#value"
    },
    {
      "include": "#type"
    },
    {
      "include": "#comment"
    }
  ],
  "repository": {
    "section": {
      "patterns": [
        {
          "name": "entity.name.tag.afml",
          "begin": "\\[",
          "end": "\\]"
        }
      ]
    },
    "variable-declaration": {
      "patterns": [
        {
          "name": "entity.name.tag.afml",
          "match": "^[ \\t]*[a-zA-Z][a-zA-Z0-9_]+:",
          "captures": {
            "0": {
              "name": "entity.name.function.afml"
            }
          }
        }
      ]
    },
    "value": {
      "patterns": [
        {
          "name": "string.quoted.double.afml",
          "match": "\"(?:\\\\.|[^\"\\\\])*\""
        },
        {
          "name": "constant.numeric.afml",
          "match": "\\b[0-9]+\\b"
        },
        {
          "name": "constant.language.afml",
          "match": "\\b(true|false)\\b"
        }
      ]
    },
    "type": {
      "patterns": [
        {
          "name": "meta.type.declaration.afml",
          "match": "\\*(Secret|String|Boolean|Number)\\b"
        }
      ]
    },
    "comment": {
      "patterns": [
        {
          "name": "comment.line.number-sign.afml",
          "begin": "#",
          "end": "$",
          "patterns": [
            {
              "include": "$self"
            }
          ]
        }
      ]
    }
  }
}
